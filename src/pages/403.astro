---
import BaseLayout from '../layouts/BaseLayout.astro';

const deniedMessages = [
  "ACCESS DENIED: YOU'RE NOT ON THE LIST",
  "403: PERMISSION DENIED (NICE TRY THOUGH)",
  "SECURITY SAYS NO",
  "YOU SHALL NOT PASS!",
  "FORBIDDEN: THIS PAGE HAS A RESTRAINING ORDER",
  "ACCESS DENIED: YOUR CLEARANCE ISN'T HIGH ENOUGH",
  "403: THIS PAGE IS OUT OF YOUR LEAGUE",
  "NOPE. NOT FOR YOU.",
  "FORBIDDEN: VIP AREA ONLY",
  "ACCESS DENIED: INSUFFICIENT PRIVILEGE LEVEL",
];

const randomMessage = deniedMessages[Math.floor(Math.random() * deniedMessages.length)];
---

<BaseLayout title="403 - ACCESS DENIED">
  <link slot="head" href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  
  <div class="overflow-x-hidden">
    
    <!-- Background Elements -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <!-- Warning Stripes -->
      <div class="absolute top-0 left-0 w-full h-8 bg-gradient-to-r from-yellow-400 via-black to-yellow-400 opacity-20"></div>
      <div class="absolute bottom-0 left-0 w-full h-8 bg-gradient-to-r from-yellow-400 via-black to-yellow-400 opacity-20"></div>
      
      <!-- Rotating Lock -->
      <div class="absolute top-20 right-20 w-32 h-32 bg-red-500 border-4 border-black dark:border-white animate-spin-slow" style="animation-duration: 10s;">
        <i class='bx bx-lock-alt text-6xl flex items-center justify-center h-full'></i>
      </div>
      
      <!-- Bouncing Warning Sign -->
      <div class="absolute top-1/3 left-10 w-24 h-24 bg-yellow-400 border-4 border-black dark:border-white transform rotate-45 animate-bounce"></div>
      
      <!-- Pulsing Stop Hand -->
      <div class="absolute bottom-32 right-1/4 w-40 h-40 bg-red-600 border-4 border-black dark:border-white rounded-full animate-pulse flex items-center justify-center">
        <i class='bx bx-block text-8xl text-white'></i>
      </div>
    </div>

    <!-- Main Content -->
    <div class="min-h-screen flex items-center justify-center p-4 relative z-10">
      <div class="max-w-4xl w-full">
        
        <!-- Error Code Badge -->
        <div class="flex justify-center mb-8 animate-wiggle">
          <div class="bg-red-600 text-white px-8 py-4 border-4 border-black dark:border-white transform -rotate-3 shadow-brutal">
            <span class="text-3xl font-black">ERROR_CODE: 403</span>
          </div>
        </div>

        <!-- Main Error Card -->
        <div class="bg-white dark:bg-gray-800 border-8 border-black dark:border-white p-8 md:p-12 shadow-brutal-xl transform hover:rotate-1 transition-all duration-300 mb-8">
          
          <!-- Giant 403 with Lock -->
          <div class="text-center mb-8">
            <div class="relative inline-block">
              <h1 class="text-[150px] md:text-[250px] font-black leading-none mb-0" style="text-shadow: 8px 8px 0 #EF4444, 16px 16px 0 #DC2626;">
                403
              </h1>
              <i class='bx bx-lock-alt absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-9xl text-yellow-400 opacity-50'></i>
            </div>
          </div>

          <!-- Random Error Message -->
          <div class="bg-red-500 border-4 border-black dark:border-white p-6 mb-8 transform -rotate-1">
            <p class="text-2xl md:text-3xl font-black text-white text-center uppercase">
              {randomMessage}
            </p>
          </div>

          <!-- Explanation Box -->
          <div class="bg-yellow-400 border-4 border-black dark:border-white p-6 mb-8 transform rotate-1">
            <p class="text-xl font-bold text-black text-center">
              ‚ö†Ô∏è WARNING ‚ö†Ô∏è
              <br class="mb-2"/>
              This page is restricted. You don't have permission to access this resource.
              <br class="hidden md:block"/>
              It's not personal. Well, maybe it is.
            </p>
          </div>

          <!-- Status Cards -->
          <div class="grid md:grid-cols-3 gap-4 mb-8">
            <div class="bg-red-400 border-4 border-black dark:border-white p-4 text-center transform -rotate-2 hover:rotate-0 transition-transform">
              <i class='bx bx-shield-x text-5xl mb-2'></i>
              <p class="font-black text-lg">ACCESS BLOCKED</p>
            </div>
            <div class="bg-orange-400 border-4 border-black dark:border-white p-4 text-center hover:-rotate-2 transition-transform">
              <i class='bx bx-error-circle text-5xl mb-2'></i>
              <p class="font-black text-lg">UNAUTHORIZED</p>
            </div>
            <div class="bg-yellow-400 border-4 border-black dark:border-white p-4 text-center transform rotate-2 hover:rotate-0 transition-transform">
              <i class='bx bx-id-card text-5xl mb-2'></i>
              <p class="font-black text-lg">NO CLEARANCE</p>
            </div>
          </div>

          <!-- Helpful Suggestions -->
          <div class="bg-purple-400 border-4 border-black dark:border-white p-6 mb-8">
            <h2 class="text-2xl font-black mb-4 text-black">POSSIBLE REASONS:</h2>
            <ul class="space-y-2 text-lg font-bold text-black">
              <li>‚úó You're not logged in (oops)</li>
              <li>‚úó You're logged in as the wrong person</li>
              <li>‚úó This page is VIP only</li>
              <li>‚úó The server doesn't like your vibe</li>
              <li>‚úó You didn't say the magic word</li>
            </ul>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-stretch">
            <a 
              href="/" 
              class="group relative inline-block flex-1 sm:flex-initial"
            >
              <span class="absolute inset-0 translate-x-2 translate-y-2 bg-yellow-400 transition-transform group-hover:translate-y-4 group-hover:translate-x-4 border-4 border-black dark:border-white"></span>
              <span class="relative flex items-center justify-center gap-2 border-4 border-black dark:border-white bg-white dark:bg-gray-900 px-8 py-4 text-xl font-black uppercase text-black dark:text-white group-hover:bg-yellow-400 transition-colors">
                <i class='bx bx-home-alt text-2xl'></i>
                GO HOME
              </span>
            </a>

            <button 
              onclick="history.back()" 
              class="group relative inline-block flex-1 sm:flex-initial"
            >
              <span class="absolute inset-0 translate-x-2 translate-y-2 bg-red-500 transition-transform group-hover:translate-y-4 group-hover:translate-x-4 border-4 border-black dark:border-white"></span>
              <span class="relative flex items-center justify-center gap-2 border-4 border-black dark:border-white bg-white dark:bg-gray-900 px-8 py-4 text-xl font-black uppercase text-black dark:text-white group-hover:bg-red-500 transition-colors">
                <i class='bx bx-left-arrow-alt text-2xl'></i>
                GO BACK
              </span>
            </button>
          </div>

        </div>

        <!-- Snarky Footer Message -->
        <div class="text-center">
          <div class="inline-block bg-red-600 text-white px-6 py-3 border-4 border-black dark:border-white transform rotate-2">
            <p class="text-lg font-black">
              üö´ FORBIDDEN ZONE üö´
            </p>
          </div>
        </div>

      </div>
    </div>

    <!-- Animated Marquee Footer -->
    <div class="fixed bottom-0 left-0 w-full bg-red-600 border-t-8 border-black dark:border-white overflow-hidden py-4 z-20">
      <div class="whitespace-nowrap animate-marquee">
        <span class="mx-8 text-2xl font-black text-white">
          üö® ACCESS DENIED üö® FORBIDDEN üö® UNAUTHORIZED üö® NO ENTRY üö® RESTRICTED AREA üö® KEEP OUT üö®
        </span>
        <span class="mx-8 text-2xl font-black text-white">
          üö® ACCESS DENIED üö® FORBIDDEN üö® UNAUTHORIZED üö® NO ENTRY üö® RESTRICTED AREA üö® KEEP OUT üö®
        </span>
      </div>
    </div>
  </div>

  <style is:global>
      @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }

      @keyframes wiggle {
        0%, 100% { transform: rotate(-3deg); }
        50% { transform: rotate(3deg); }
      }

      .animate-marquee {
        animation: marquee 20s linear infinite;
      }

      .animate-wiggle {
        animation: wiggle 2s ease-in-out infinite;
      }

      .animate-spin-slow {
        animation: spin 10s linear infinite;
      }

      .shadow-brutal {
        box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 1);
      }

      .dark .shadow-brutal {
        box-shadow: 6px 6px 0px 0px rgba(255, 255, 255, 1);
      }

      .shadow-brutal-xl {
        box-shadow: 12px 12px 0px 0px rgba(0, 0, 0, 1);
      }

      .dark .shadow-brutal-xl {
        box-shadow: 12px 12px 0px 0px rgba(255, 255, 255, 1);
      }

      @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
    </style>
</BaseLayout>
