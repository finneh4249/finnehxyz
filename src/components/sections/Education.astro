---
import EducationItem from '../education/EducationItem.astro';
import educationItems from '../../data/education.json';
---

<section id="education" class="py-20 bg-neo-orange dark:bg-zinc-950 relative overflow-hidden">
  <!-- Chaotic brutal decorative elements -->
  <div class="absolute top-20 left-5 w-40 h-40 border-3 border-black bg-neo-pink rotate-12"></div>
  <div class="absolute top-40 right-10 w-24 h-60 border-3 border-black bg-neo-blue -rotate-6"></div>
  <div class="absolute bottom-32 left-20 w-56 h-32 border-3 border-black bg-neo-green rotate-3"></div>
  <div class="absolute bottom-20 right-32 w-32 h-32 border-3 border-black bg-neo-purple -rotate-12"></div>
  <div class="absolute top-1/3 right-1/4 w-20 h-20 border-3 border-black bg-neo-yellow rotate-45"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="mb-20 relative animate-on-scroll slide-left">
      <div class="flex items-center gap-6 flex-wrap">
        <h2 class="text-6xl md:text-7xl font-display font-bold uppercase tracking-tight -rotate-2 text-black dark:text-white">
          Education
        </h2>
        <div class="brutal-btn brutal-pink px-6 py-3 rotate-3 text-white">
          LEARNING
        </div>
      </div>
      <div class="h-2 w-48 bg-black dark:bg-white mt-6 -rotate-1"></div>
    </div>

    <div class="max-w-6xl mx-auto space-y-8">
      {educationItems.map((item, index) => (
        <EducationItem
          year={item.year}
          institution={item.institution}
          program={item.program}
          description={item.description}
          gpa={item.gpa}
          logoSrc={item.logoSrc}
          logoAlt={item.logoAlt}
          index={index}
          isLast={index === educationItems.length - 1}
          isFirst={index === 0}
        />
      ))}
    </div>
  </div>
</section>